extends layout

block content
    h1= `Update ${beca.nombre}`
    form(action="", method="post", class="form-group updateBeca")
        label(for="Nombre") Nombre
        br
        input(type="text", name="nombre", value=beca.nombre)
        br
        label(for="Fundacion") Organizacion
        br
        input(type="text", name="fundacion", value= beca.fundacion)
        br
        label(for="tipo") Tipo
        br
        select(name="tipo")
            option completa
            option parcial
            option matricula
            option residencia
            option transporte
        br
        label(for="descripcion") Descripcion
        br
        input(type="text", name="descripcion", value= beca.descripcion)
        br
        input(type="submit", value="Modificar", class="btn btn-danger")
        input(type="submit", value="Cancelar", class="btn btn-danger", formaction="/cancel")